<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/parent_pw_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="WRITE NEW PASSWORD"/>
            <EditText
                android:id="@+id/parent_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/parent_pw_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/parent_pw_btn"
                android:layout_below="@id/parent_pw_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAHNGE PASSOWRD"

                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>